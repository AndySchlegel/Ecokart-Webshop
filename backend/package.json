{
  "name": "ecokart-backend",
  "version": "1.0.0",
  "description": "EcoKart Backend API - Local Development",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "echo \"Tests coming soon...\"",
    "dynamodb:create-tables": "node scripts/create-dynamodb-tables.js",
    "dynamodb:verify": "node scripts/verify-dynamodb-tables.js",
    "dynamodb:migrate": "node scripts/migrate-to-dynamodb.js",
    "dynamodb:setup": "npm run dynamodb:create-tables && npm run dynamodb:migrate",
    "lambda:build": "npm run build",
    "lambda:deploy": "sam build && sam deploy --guided",
    "lambda:deploy:quick": "sam build && sam deploy"
  },
  "keywords": [
    "ecokart",
    "express",
    "typescript",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.637.0",
    "@aws-sdk/credential-providers": "^3.916.0",
    "@aws-sdk/lib-dynamodb": "^3.637.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "serverless-http": "^3.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
